{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "blamzilla/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image":"blamzilla/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name": "worker",
            "image":"blamzilla/multi-worker",
            "hostname":"worker",
            "essential":false
        },
        {
            "name": "nginx",
            "image":"blamzilla/multi-nginx",
            "essential":true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]

        }

    ]
}